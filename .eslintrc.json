{
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
    "no-duplicate-imports": "error",
    "no-func-assign": "error",
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "camelcase": [
      "error",
      {
        "properties": "always",
        "ignoreDestructuring": false,
        "ignoreImports": false,
        "ignoreGlobals": false
      }
    ],
    "curly": "error",
    "default-case": "error",
    "no-empty": "error",
    "no-empty-function": "error",
    "no-unused-vars": "error"
  }
}